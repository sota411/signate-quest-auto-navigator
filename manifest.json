{
  "manifest_version": 3,
  "name": "SIGNATE Quest Auto Navigator",
  "version": "1.0.0",
  "description": "SIGNATEクエストを自動で進める拡張機能",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://signate.jp/*",
    "https://*.signate.jp/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://signate.jp/*", "https://*.signate.jp/*"],
      "js": ["ai-helper.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
